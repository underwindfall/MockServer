<!DOCTYPE html>
<html>

<head>
    <%- include('partials/metaheader') %>
    <title>Mock admin panel</title>
</head>

<body>
    <div class="container-fluid">
        <h2 class="center-text">Security Teams Profiles</h2>
        <div class="row">
            <h3 class="col-md-6 offset-md-3">
                Select a profile to edit:
            </h3>
        </div>

        <div class="row">
            <div class="col-md-6 offset-md-3">
                <table class="table table-hover">
                    <tr>
                        <th>Profile</th>
                        <th>Action</th>
                    </tr>
                    <% profiles.forEach(profile => { %>
                    <tr>
                        <td><%= profile %></td>
                        <td><a href="<%= pathPrefix %>/admin/profiles/<%= profile %>">Edit</a></td>
                    </tr>
                    <% }) %>
                </table>
            </div>
        </div>

    </div>
</body>

</html>